                    <li class="nav-item mb-2"><a href="{{ path('app_profile') }}" class="nav-link p-0 text-muted">Profile</a></li>
                    <li class="nav-item mb-2"><a href="{{ path('admin') }}" class="nav-link p-0 text-muted">Admin</a></li>
                </ul>
            </div>
        </footer>
    </div>
{% endblock %}

