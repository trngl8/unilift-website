{% extends 'base.html.twig' %}

{% block title %}{{ app_name }} {{ app.request.pathinfo }} {% endblock %}

{% block favicon %}
{#<link rel="icon" href="/favicon.ico">#}
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="shortcut icon" type="image/svg+xml" href="{{ asset('favicons/favicon.svg') }}">
<link rel="alternate icon" type="image/png" sizes="16x16" href="{{ asset('favicons/favicon16x16.png') }}">
<link rel="apple-touch-icon" sizes="180x180" href="{{ asset('favicons/apple-touch-icon.png') }}" />
{% endblock %}

{% block modal %}{% endblock %}

{% block body %}
{% block extended_navbar %}{% endblock %}
{% block simple_navbar %}{% endblock %}
{% block top_menu %}{% endblock %}
<main>
    {% block main_body %}
        {% block main %}
        {% endblock %}
    {% endblock %}
</main>
{% endblock %}

