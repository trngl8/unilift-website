{% extends 'base_layout.html.twig' %}

{% block add_stylesheets %}
    {{ parent() }}
    <style>
    .content {
        background-image: url("{{ asset('build/images/bg.svg') }}");
        background-repeat: no-repeat;
        background-size: cover;
        /*background-position-x: left;*/
        /*background-position-y: top;*/
        background-position: top left;
    }
    </style>
{% endblock %}

{% block extended_navbar %}
<header class="border-bottom">
    <nav class="navbar navbar-expand-sm">
        <div class="container"> {# container-fluid #}
            <a class="navbar-brand" href="{{ path('app_home') }}">
                <img src="{{ asset('build/images/logo.png') }}" alt="" width="200">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('app_index') }}">{{ 'menu.index'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_product_index') }}">{{ 'menu.products'|trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_contact') }}">{{ 'menu.contacts'|trans }}</a>
                    </li>
                </ul>
                {% if form_service is defined %}
                    {% set order_form = form_service.createOrderForm %}
                <div id="orderForm">

                    <a href="https://t.me/+380736353355"><img src="{{ asset('build/images/telegram-icon.svg') }}" alt="Telegram" width="32" /></a>
                    <a href="viber://chat?number=%2B380736353355"><img src="{{ asset('build/images/viber-icon.svg') }}" alt="Viber" width="32" /></a>
                    <a href="https://wa.me/+380736353355"><img src="{{ asset('build/images/whatsapp-icon.svg') }}" alt="WhatsApp" width="32" /></a>

                    <span class="ms-5">
                        <button type="button" class="btn btn-outline-danger mx-sm-2" data-bs-toggle="modal" data-bs-target="#orderModal">
                            {{ "action.order"|trans|raw }}
                        </button>
                    </span>

                    <!-- Modal -->
                    <div class="modal fade" id="orderModal" tabindex="-1" aria-labelledby="orderModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="orderModalLabel">{{ 'action.order'|trans|raw }}</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    {{ form_start(order_form, {'action': path('app_order_new'), 'method': 'POST', 'attr': {'novalidate': 'novalidate'}}) }}
                                    {{ form_widget(order_form) }}
                                    <button type="submit" class="btn btn-lg btn-outline-primary">{{ 'button.submit'|trans }}</button>
                                    {{ form_end(order_form) }}
                                </div>
                                <div class="modal-footer">
{#                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'button.close'|trans }}</button>#}
{#                                    <button type="button" class="btn btn-primary">{{ 'button.submit'|trans }}</button>#}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endif %}

                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') or is_granted('IS_AUTHENTICATED_FULLY') %}
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-fill"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="{{ path('app_profile') }}">{{ 'app.profile'|trans }}</a></li>
                            {% if is_granted("ROLE_ADMIN") %}
                                <li><a href="{{ path('easy_admin') }}" class="dropdown-item" type="button">{{ 'app.admin'|trans }}</a></li>
                                <li><a href="{{ path('admin') }}" class="dropdown-item" type="button">{{ 'app.manager'|trans }}</a></li>
                            {% endif %}
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="{{ path('app_logout') }}">{{ 'app.logout'|trans }}</a></li>
                        </ul>
                    </div>
{#                {% else %}#}
{#                    <a class="btn btn-outline-secondary ms-lg-2" href="{{ path('app_login') }}"><i class="bi bi-person"></i> {{ 'login'|trans }}</a>#}
                {% endif %}
            </div>
        </div>
    </nav>
</header>
{% endblock %}


{% block main_body %}
