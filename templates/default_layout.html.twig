    {% block features %}
        <div class="container mt-4">
            <div class="row">
                <div class="col-md-4 text-center">
                    <p class="fs-4 text-uppercase text-muted">Якість</p>
                    <img src="{{ asset('build/images/quality-icon.png') }}" alt="Якість"/>
                    <p class="fs-5 text-muted mx-5 lh-1">Ми використовуємо найкращі матеріали</p>
                </div>
                <div class="col-md-4 text-center">
                    <p class="fs-4 text-uppercase text-muted">Відповідальність</p>
                    <img src="{{ asset('build/images/responsibility-icon.png') }}" alt="Відповідальність" />
                    <p class="fs-5 text-muted mx-5 lh-1">Наша команда фахівців виконає всі ваші побажання та вимоги в обумовлений термін</p>
                </div>
                <div class="col-md-4 text-center">
                    <p class="fs-4 text-uppercase text-muted">Найвигідніші ціни</p>
                    <img src="{{ asset('build/images/prices-icon.png') }}" alt="Найвигідніші ціни" />
                    <p class="fs-5 text-muted mx-5 lh-1">У нас найвигідніші ціни в Україні</p>
                </div>
            </div>
        </div>
    {% endblock %}



    {% block hero %}

    {% endblock %}

    {% block quick_form %}
        <div class="container-fluid" style="background: #2B2E2D">
            <div class="container p-4">
                <form action="/send" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <span class="text-white fs-5">Для швидкого зв'язку заповніть дані і ми вам зателефонуємо</span>
                        </div>
                        <div class="col-auto">
                            <input class="form-control" type="text" placeholder="Ім'я" />
                        </div>
                        <div class="col-auto">
                            <input class="form-control" type="tel" placeholder="Телефон" />
                        </div>
                        <div class="col-auto">
                            <input class="form-control btn btn-danger" type="submit" value="Відправити" />
                        </div>
                    </div>
                </form>
            </div>

        </div>
    {% endblock %}

    {% block products_links %}
    <div class="container mt-4">
        <div class="row">
            <div class="row justify-content-evenly">
                <p class="fs-4 text-center">Ліфтове обладнання, з яким ми працюємо:</p>
                <div class="col-4">
                    <ul class="fs-5">
                        {% for product in products %}
                            {% if loop.index is even %}
                                {% if product.slug %}
                                    <li><a href="{{ path('app_product_default', {alias:product.slug}) }}" class="text-black">{{ product.title }}</a></li>
                                {% else %}
                                    <li><a href="#" class="text-black">{{ product.title }}</a></li>
                                {% endif %}
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
                <div class="col-4">
                    <ul class="fs-5">
                        {% for product in products %}
                            {% if loop.index is odd %}
                                {% if product.slug %}
                                    <li><a href="{{ path('app_product_default', {alias:product.slug}) }}" class="text-black">{{ product.title }}</a></li>
                                {% else %}
                                    <li><a href="#" class="text-black">{{ product.title }}</a></li>
                                {% endif %}
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
            </div>

        </div>
    </div>
    {% endblock %}

    {% block main_content %}

        <main class="container mt-4 content">
            {% block breadcrumbs %}{% endblock %}

            {% block flashes %}
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success" role="alert">
                        {{ message|trans }}
                    </div>
                {% endfor %}

                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger" role="alert">
                        {{ message|trans }}
                    </div>
                {% endfor %}

                {% for message in app.flashes('danger') %}
                    <div class="alert alert-danger" role="alert">
                        {{ message|trans }}
                    </div>
                {% endfor %}

                {% for message in app.flashes('warning') %}
                    <div class="alert alert-warning" role="alert">
                        {{ message|trans }}
                    </div>
                {% endfor %}

                {% block add_flashes %}{% endblock %}
            {% endblock %}

            {% block main %}

            {% endblock %}
        </main>

    {% endblock%}
{% endblock %}


