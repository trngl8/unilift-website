{% extends 'layout.html.twig' %}

{% block title %}{{ 'title.subscribes'|trans }}{% endblock %}

{% block page_title %}
    <h1 class="mt-4">{{ 'title.subscribes'|trans }}</h1>
{%endblock%}

{% block main %}
    <h1 class="mb-4">{{ 'title.subscribes'|trans }}</h1>

    {% if items is defined and items|length > 0 %}
        <div class="row">
            <div class="col-md-6">

                <div class="list-group w-auto">
                    {% for item in items %}
                    <a href="" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                        <div class="d-flex gap-2 w-100 justify-content-between">
                            <div>
                                <h6 class="mb-0">{{ item.id }} {{ item.title }}</h6>
                                <p class="mb-0 opacity-75">{{ item.currency }}</p>
                                {% if item.active %}<span class="badge bg-success">Active</span>{% endif %}
                            </div>
                            <small class="opacity-50 text-nowrap">now</small>
                        </div>
                    </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}

{% endblock %}
