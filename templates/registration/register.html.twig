{% extends 'default.html.twig' %}

{% block title %}{{ 'title.register'|trans }}{% endblock %}

{% block breadcrumbs %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">{{ 'title.home'|trans }}</a></li>
            <li class="breadcrumb-item" aria-current="page">{{ 'title.register'|trans }}</li>
            <li class="breadcrumb-item"><a href="{{ path('app_login') }}">{{ 'title.login'|trans }}</a></li>
        </ol>
    </nav>
{% endblock %}

{% block footer %}
{% endblock %}
{% block main %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="mb-4">{{ 'title.register'|trans }}</h1>

    <div class="row">
        <div class="col-md-8">

            {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_rest(registrationForm) }}
                <button type="submit" class="btn btn-lg btn-outline-primary">{{ 'button.register'|trans }}</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
