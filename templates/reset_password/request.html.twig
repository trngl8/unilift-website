{% extends 'default.html.twig' %} {# layout was the old template #}

{% block title %}{{ 'messages.reset_password'|trans }}{% endblock %}

{% block breadcrumbs %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">{{ 'title.home'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_register') }}">{{ 'title.register'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_login') }}">{{ 'title.login'|trans }}</a></li>
        <li class="breadcrumb-item" aria-current="page">{{ 'title.reset_password'|trans }}</li>
    </ol>
</nav>
{% endblock %}

{% block footer %}
{% endblock %}

{% block main %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="mb-4">{{ 'messages.forgot_password'|trans }}</h1>

    <div class="row">
        <div class="col-md-8">

            {{ form_start(requestForm) }}
                {{ form_row(requestForm.username, {
                    'label': 'Email',
                }) }}
                <small>
                    {{ 'messages.enter_email_to_reset'|trans }}
                </small>

                <div class="mt-3">
                    <button class="btn btn-lg btn-primary" type="submit">{{ 'messages.send_reset_email'|trans }}</button>
                </div>
            {{ form_end(requestForm) }}

        </div>
    </div>
{% endblock %}
